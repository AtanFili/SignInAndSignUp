<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >


    <TextView
        app:layout_constraintBottom_toTopOf="@+id/text_view_login_sign_in"
        android:id="@+id/text_view_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Android"
        android:textColor="#ffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_view_login_sign_in"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Sign In"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_login"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_login_sign_in"
        android:hint="Login"
        android:layout_margin="20dp"

        android:id="@+id/edit_text_login"
        android:textColorHint="#ffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_login_sign_in"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/gradient2"
        android:id="@+id/button_Login"
        android:alpha="0.3"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_login"
        android:layout_margin="20dp"
        android:hint="Password"
        android:id="@+id/edit_text_password"
        android:textColorHint="#ffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient2"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_Login"
        android:id="@+id/button_password"
        android:alpha="0.3"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_password"
        android:id="@+id/sign_in_button_dolno"
        android:hint="Sign in"
        android:textColorHint="#ffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient2"
        app:layout_constraintTop_toBottomOf="@id/button_password"
        android:layout_margin="20dp"
        android:id="@+id/button_signIn"
        android:alpha=".30"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot you password?"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@id/button_password"
        app:layout_constraintTop_toBottomOf="@id/button_signIn"
        android:layout_marginTop="20dp"
        android:id="@+id/forgotenpass"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@id/sign_in_button_dolno"
        app:layout_constraintTop_toBottomOf="@id/sign_in_button_dolno"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:id="@+id/signupbottomtextview"
        />





</androidx.constraintlayout.widget.ConstraintLayout>